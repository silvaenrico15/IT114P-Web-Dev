<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/nav.ejs') %>

  <section class="section">
    <div class="columns is-centered">
      <div class="column is-four-fifths">
        <nav class="panel">
          <p class="panel-heading">
            College of Computer and Information Science
          </p>
          <div class="panel-block">
            <div class="field">
              <div class="tabs is-toggle">
                <ul>
                  <li>
                    <a href="/ccis/home">
                      <span class="icon is-small"><i class="mdi mdi-24px mdi-notification-clear-all"
                          aria-hidden="true"></i></span>
                      <span>ALL</span>
                    </a>
                  </li>
                  <li class="is-active">
                    <a href="/ccis/IT">
                      <span class="icon is-small"><i class="mdi mdi-24px mdi-laptop" aria-hidden="true"></i></span>
                      <span>IT</span>
                    </a>
                  </li>
                  <li>
                    <a href="/ccis/CS">
                      <span class="icon is-small"><i class="mdi mdi-24px mdi-desktop-classic"
                          aria-hidden="true"></i></span>
                      <span>CS</span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="panel-block">
            <div class="field">
              <div class="tabs is-toggle">
                <ul>
                  <li>
                    <a href="/ccis/IT/badminton">
                      <span class="icon is-small"><i class="mdi mdi-24px mdi-badminton" aria-hidden="true"></i></span>
                      <span>Badminton</span>
                    </a>
                  </li>
                  <li class="is-active">
                    <a href="/ccis/IT/basketball">
                      <span class="icon is-small"><i class="mdi mdi-24px mdi-basketball" aria-hidden="true"></i></span>
                      <span>Basketball</span>
                    </a>
                  </li>
                  <li>
                    <a href="/ccis/IT/volleyball"><span class="icon is-small"><i class="mdi mdi-24px mdi-volleyball"
                          aria-hidden="true"></i></span>
                      <span>Volleyball</span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="panel-block">
            <div class="field">
              <table class="table">
                <thead>
                  <tr>
                    <th><abbr title="id">Student Number</abbr></th>
                    <th><abbr title="program">Program</abbr></th>
                    <th><abbr title="Sport">Sport</abbr></th>
                    <th><abbr title="fullname">Full Name</abbr></th>
                  </tr>
                </thead>
                <% if (register.length > 0) { %>
                <% for (let player of register) { %>
                <tbody>

                  <tr>
                    <td><%=player.id%></td>
                    <td><%=player.program%></td>
                    <td><%=player.sport%></td>
                    <td><%=player.fullname%></td>
                    <td><%=player.email%></td>
                  </tr>
                </tbody>


                <% } %>
                <% } else { %>

                <% } %>
              </table>

            </div>
          </div>
        </nav>
      </div>
    </div>
    </div>

  </section>

  <%- include('../includes/scripts.ejs') %>
</body>

</html>